<div class="right_col" role="main">
  <!-- top tiles -->
  
  <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>Math Olympiad<small>Participants' List</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a href="/dashboard"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% let success = "Data Successfully deleted." %>
        <% let success2 = "Payment Accepted Successfully." %>
        <% let success3 = "Participant Selected Successfully." %>
        <% let success4 = "Participant Data was edited Successfully." %>
          <%if(error.length>0){if(error == success || success2 || success3 || success4){%>
              <div class="alert alert-success">
                  <%=error%><br/>
              </div>
            <%}else{%>
              <div class="alert alert-danger">
                  <%= error%><br/>
              </div>
            <%}%>
          <%}%>
          <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
        

        <table id="datatable-responsive" class="table jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Contact No.</th>
              <th>Institution</th>
              <th>T-Shirt</th>
              <th>Selected</th>
              <th>Payment Status</th>
              <th>Select</th>
              <th>Payment Done</th>
              <th>Edit</th>
              <th>Delete</th>
              <th>E-mail</th>
              <th>Fees</th>
              <th>Paid</th>
              <th>Added<br>At</th>
            </tr>
          </thead>
          <tbody>
            <%if(participants.length>0){%>
              <%participants.forEach(participant=> {%>
                <tr>
                  <td><%= participant.name %></td>
                  <td><%= participant.category %></td>
                  <td><%= participant.contact %></td>                  
                  <td><%= participant.institution %></td>
                  <td><%= participant.tshirt %></td>
                  <td><%= participant.selected %></td>
                  <td>
                    <%if(participant.paid == participant.total){%>
                      <p style="color: cadetblue;">Successful</p>
                    <%}else{%>
                      <p style="color: brown;">Incomplete</p>
                    <%}%>
                  </td>
                  <td>
                    <% const participantSelectedURL = "Selected/" + participant._id %>
                      <a href="<%= participantSelectedURL %>" data-toggle="tooltip" title="Participant Selected?">
                        <i class="glyphicon glyphicon-ok"></i> <i class="fa fa-user"></i>
                      </a>
                  </td>
                  <td>
                    <% const PaymentDoneURL = "paymentDone/" + participant._id %>
                      <a href="<%= PaymentDoneURL %>" data-toggle="tooltip" title="Payment Done?">
                        <i class="glyphicon glyphicon-ok"></i>  <i class="fa fa-dollar"></i>
                      </a>
                  </td>
                  <td>
                    <% const editURL = "edit/" + participant._id %>
                    <a href="<%= editURL %>" data-toggle="tooltip" title="Edit">
                      <i style="color: green;"class="glyphicon glyphicon-pencil"></i></a>
                  </td>
                  <td>
                    <% const deleteURL = "delete/" + participant._id %>
                      <a href="<%= deleteURL %>" data-toggle="tooltip" title="Delete">
                        <i style="color: brown;" class="glyphicon glyphicon-trash"></i>
                      </a>
                  </td>
                  <td><%= participant.email %></td>
                  <td><%= participant.total %></td>
                  <td><%= participant.paid %></td>
                  <td><%= participant.date %></td>
                </tr>
              <%})%>
            <%}%>
          </tbody>
        </table>


      </div>
    </div>
          </div>
        </div>
  </div>
</div>

</div>